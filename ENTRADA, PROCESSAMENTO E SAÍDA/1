#include <stdio.h>

#define PI 3.1415

int main() {
    float r, diam, comp, area;

    printf("Digite o raio da circunferencia: ");
    scanf("%f", &r);

    diam = 2 * r;
    comp = 2 * PI * r;
    area = PI * r * r;

    printf("Diametro: %.3f\n", diam);
    printf("Comprimento: %.3f\n", comp);
    printf("Area: %.3f\n", area);

    return 0;
}
